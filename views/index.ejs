<%- include('partials/header', { titulo: 'Informações sobre Neurodivergência' }) %>

<section class="informacoes-grid">
  <h1 class="hero-title">Informações sobre Neurodivergência</h1>

  <% if (noticias.length === 0) { %>
    <p>Nenhuma informação encontrada.</p>
  <% } else { %>

  <div class="info-cards">
    <% noticias.forEach(n => { %>
    <article class="info-card">
      <h2 class="info-title">
        <a href="/noticia/<%= n.id %>"><%= n.titulo %></a>
      </h2>

      <p class="info-meta">
        <span class="author">Por <%= n.autor %></span> •
        <span class="date">
          <%= new Date(n.data_publicacao).toLocaleDateString('pt-BR') %>
        </span>
        •
        <span class="category"><%= n.categoria %></span>
      </p>

      <p class="info-excerpt"><%= n.resumo %>...</p>
      <a href="/noticia/<%= n.id %>" class="read-more">Ler mais →</a>
    </article>
    <% }) %>
  </div>

  <% } %>
</section>

<%- include('partials/footer') %>
